{
    "json_class": "Chef::Role",
    "name": "trackmiles",
    "description": "TrackMiles Server Configuration",
    "run_list": [
        "recipe[chef-solo-search]",
        "recipe[apt-periodic]",
        "recipe[fail2ban]",
        "recipe[logrotate]",
        "recipe[ufw::databag]"
    ],
    "override_attributes": {
        "apt-periodic": {
            "unattended_upgrade_interval": "1",
            "unattended_upgrades": {
                "mail": "contact@davidraff.com"
            }
        }
    },
    "default_attributes": {
        "resolver": {
            "nameservers": ["8.8.8.8", "8.8.4.4"]
        }
    }
}
